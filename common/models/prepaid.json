{
  "name": "Prepaid",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "company": {
      "type": "string",
      "required": true
    },
    "paymentRef": {
      "type": "string",
      "required": true
    },
    "paymentDate": {
      "type": "date"
    },
    "term": {
      "type": "date",
      "required": true
    },
    "totalUnits": {
      "type": "number",
      "required": true
    },
    "contactEmail": {
      "type": "string",
      "required": true
    },
    "contactName": "string",
    "contactPhone": "string",
    "contactRequest": {
      "type": "object"
    },    
    "servedUnits": {
      "type": "number",
      "default": 0
    },
    "status": {
      "type": "string",
      "default": "ready"
    },
    "updated":{
      "type": "date",  
      "defaultFn": "now"
    }
  },
  "validations": [],
  "relations": {
		"serviceLogs": {
			"type": "hasMany",
			"model": "ServiceLog",
			"foreignKey": "prepaidId"
		}    
  },
  "acls": [
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW"
    },
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "accessType": "EXECUTE",
      "property": "request"
    }
  ],
  "methods": {}
}
